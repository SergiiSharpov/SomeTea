}

vec4 getPixel(in vec2 coord, float time) {    
    vec2 uv = coord / resolution.xy;
    uv = uv * 2.0 - 1.0;
    uv.x *= resolution.x / resolution.y;    

    vec3 viewDirection = normalize(vPosition - cameraPosition);

    float dist = shortestDistanceToSurface(cameraPosition, viewDirection, MIN_DIST, MAX_DIST);

    if (dist > MAX_DIST - EPSILON) {
        // Didn't hit anything
        return vec4(0.0, 0.0, 0.0, 0.0);
    }

    vec3 pos = cameraPosition + dist * viewDirection;

    vec4 mvpPosition = vWPMatrix * vec4(pos.xyz, 1.0);
    mvpPosition.xyz /= mvpPosition.w;
    mvpPosition.xyz = mvpPosition.xyz * 0.5 + 0.5;

    float depthColor = texture2D(depthMap, mvpPosition.xy).r;

    if (depthColor < mvpPosition.z) {
        discard;
    }

    viewDirection = normalize(pos.xyz - cameraPosition.xyz);

    vec3 normal = sceneNormal(pos);

    float fresnel = clamp(1.0 - dot(normal, -viewDirection), 0.0, 1.0);
    fresnel = pow(fresnel, 3.0) * 0.5;

    vec3 dirLight = vec3(0.808049, 0.685002, 0.42915);
    
    vec3 reflected = textureCube(envMap, reflect(viewDirection, normal) * vec3(-1.0, 1.0, 1.0)).rgb;
    vec3 refracted = waterColor + diffuse(normal, dirLight, 40.0) * highWaterColor * 0.12; 
    
    vec3 color = mix(refracted,reflected,fresnel);
    
    float atten = max(1.0 - dot(dist,dist) * 0.001, 0.0);
    color += highWaterColor * (pos.y - SEA_HEIGHT) * 0.18 * atten;
    
    color += vec3(specular(normal, dirLight, viewDirection, 60.0));

    float waterOpacity = 1.0 - dot(-normalize(pos.xyz - cameraPosition.xyz), viewDirection);
    
    return vec4(color, opacity);
}

// main
void main() {
    vec4 color = getPixel(gl_FragCoord.xy, time * 0.3);

    gl_FragColor = vec4(pow(color.rgb, vec3(0.65)), color.a);
}