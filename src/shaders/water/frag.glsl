float sceneSDF(vec3 pos) {
    float noise = max(0.0, map(pos * uvScale));

    float flowHeight = (0.088 * height) - (noise * 0.001);

    return sdCappedCone(vec3(pos.x, pos.y, pos.z), vec3(0.0, 0.016, 0.0), vec3(0.0, 0.088 * ((height + noise) * 0.88), 0.0), 0.034, 0.044);
}

#define STEPS 64
#define STEP_SIZE 1.0 / 64.0
#define EPSILON 0.0001
#define MIN_DIST 0.0
#define MAX_DIST 100.0
#define MAX_MARCHING_STEPS 255

vec3 sceneNormal(vec3 p) {
    return normalize(vec3(
        sceneSDF(vec3(p.x + EPSILON, p.y, p.z)) - sceneSDF(vec3(p.x - EPSILON, p.y, p.z)),
        sceneSDF(vec3(p.x, p.y + EPSILON, p.z)) - sceneSDF(vec3(p.x, p.y - EPSILON, p.z)),
        sceneSDF(vec3(p.x, p.y, p.z + EPSILON)) - sceneSDF(vec3(p.x, p.y, p.z - EPSILON))
    ));
}

float shortestDistanceToSurface(vec3 eye, vec3 marchingDirection, float start, float end) {
    float depth = start;
    for (int i = 0; i < MAX_MARCHING_STEPS; i++) {
        float dist = sceneSDF(eye + depth * marchingDirection);
        if (dist < EPSILON) {
            return depth;
        }
        depth += dist;
        if (depth >= end) {
            return end;
        }
    }
    return end;
}

vec3 shortestPositionOnSurface(vec3 eye, vec3 marchingDirection, float start, float end) {
    float depth = start;
    for (int i = 0; i < MAX_MARCHING_STEPS; i++) {
        float dist = sceneSDF(eye + depth * marchingDirection);
        if (dist < EPSILON) {
            return eye + marchingDirection * depth;
        }
        depth += dist;
        if (depth >= end) {
            return eye + marchingDirection * end;
        }
    }
    return eye + marchingDirection * end;
}

float heightMapTracing(vec3 ori, vec3 dir, out vec3 p) {  
    float tm = 0.0;
    float tx = 1000.0;    
    float hx = sceneSDF(ori + dir * tx);
    if(hx > 0.0) return tx;

    float hm = sceneSDF(ori + dir * tm);    
    float tmid = 0.0;
    for(int i = 0; i < NUM_STEPS; i++) {
        tmid = mix(tm,tx, hm/(hm-hx));                   
        p = ori + dir * tmid;                   
    	float hmid = sceneSDF(p);
		if(hmid < 0.0) {
        	tx = tmid;
            hx = hmid;
        } else {
            tm = tmid;
            hm = hmid;
        }
    }
    return tmid;
}

float heightMapTracing0(vec3 ori, vec3 dir, out vec3 p) {  
    float tm = 0.0;
    float tx = 1000.0;    
    float hx = map(ori + dir * tx);
    if(hx > 0.0) return tx;   
    float hm = map(ori + dir * tm);    
    float tmid = 0.0;
    for(int i = 0; i < NUM_STEPS; i++) {
